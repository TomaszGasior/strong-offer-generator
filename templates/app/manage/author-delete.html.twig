{% extends 'app/base.html.twig' %}

{% block title %}Usuń osobę „{{ author.name }}”{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_rest(form) }}
    <p class="h5 mb-4">Czy na pewno chcesz usunąć osobę „{{ author.name }}”? Tej czynności nie można cofnąć.</p>
    <a href="{{ path('author.edit', {id: author.id}) }}" class="btn btn-secondary mr-3">Wróć</a>
    <button class="btn btn-danger">Usuń bezpowrotnie</button>
    {{ form_end(form) }}
{% endblock %}
