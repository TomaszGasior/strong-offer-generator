{% extends 'app/base.html.twig' %}

{% block title %}Usuń rabat „{{ discount.name }}”{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_rest(form) }}
    <p class="h5 mb-4">Czy na pewno chcesz usunąć rabat „{{ discount.name }}”? Tej czynności nie można cofnąć.</p>
    <a href="{{ path('discount.edit', {id: discount.id}) }}" class="btn btn-secondary mr-3">Wróć</a>
    <button class="btn btn-danger">Usuń bezpowrotnie</button>
    {{ form_end(form) }}
{% endblock %}
